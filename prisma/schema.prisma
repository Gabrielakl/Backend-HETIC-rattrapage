generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid())
  name            String?
  email           String    @unique
  password        String
  created_at      DateTime  @default(now())

  pokemon         Pokemon[]
}

model Pokemon {
  id              String    @id @default(uuid())
  name            String
  type            String
  created_at      DateTime  @default(now())
  health          Int
  userId          String

  technics        Technics[]
  user            User      @relation(fields: [userId], references: [id])
}

model Technics {
  id              String    @id @default(uuid())
  name            String
  created_at      DateTime  @default(now())
  attack          Int
  type            String

  pokemonId       String
  pokemon         Pokemon   @relation(fields: [pokemonId], references: [id])
}
